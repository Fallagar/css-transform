/* SECTION FOR TAGS (NO ID's OR CLASSES */
body {
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
  align-items: center;
  justify-content: flex-start;
  }
span {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
}
input {
  margin-left: 10px;
}
nav {
  display: flex;
}
header {
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: row;
  width: 100vw;
  height: 10%;
  background-color: #012a4a;
  color: #a9d6e5;
  justify-content: center;
  align-items: center;
}
main {
  width: 100vw;
  margin: 0;
  background-color: #2c7da0;
  height: 85%;
  display: flex;
  flex-direction: column;
}
footer {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #012a4a;
  width: 100vw;
  height: 5%;
}
/* HEADER STYLES */
#logo {
  margin-right: 100px;
}
#lang {
  margin-left: 100px;
}
/* MAIN STYLES */
#wrapper {
  padding-top: 2%;
  display: flex;
  position: relative;
  flex-direction: row;
  justify-content: center;
}
#first,
#second,
#third {
  color: white;
  display: flex;
  border-radius: 35px;
  width: 300px;
  height: 100px;
  border: none;
  flex-direction: column;
  text-align: center;
  justify-content: space-evenly;
  align-items: center;
}
#second {
  z-index: 2;
  background-color: #01497c;
}
#first {
  z-index: 3;
  background-color: #014f86;
  position: relative;
  transform: translate(300px);
  transition: all 1s ease-out;
}
#third {
  z-index: 1;
  background-color: #013a63;
  position: relative;
  transform: translate(-300px);
  transition: all 1s ease-out;
}
#result {
  margin: auto;
  width: 500px;
  height: 300px;
  border-radius: 35px;
  background-color: #01497c;
  opacity: 0;
  transition: all 1s ease-out;
}
/* FOOTER */
/* CLASSES FOR TRANSFORMATION */

.endclass {
  transform: translate(0px, 110px);
  transition: all 1s ease-out;
}
.calculateClass {
  transform: translate(-300px, 220px) !important;
  transition: all 1s ease-out;
}
.resultClass {
  transform: translate(0, 60px);
  opacity: 1 !important;
}


